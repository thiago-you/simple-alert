<resources>

    <style name="AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="BaseProgressBar">
        <item name="android:max">100</item>
        <item name="android:indeterminateDrawable">@drawable/small_progressbar</item>
    </style>

    <style name="SmallProgressBar" parent="BaseProgressBar">
        <item name="android:layout_width">46dip</item>
        <item name="android:layout_height">46dip</item>
        <item name="android:maxWidth">46dip</item>
        <item name="android:maxHeight">46dip</item>
    </style>

    <style name="MediumProgressBar" parent="BaseProgressBar">
        <item name="android:layout_width">180dip</item>
        <item name="android:layout_height">180dip</item>
        <item name="android:maxWidth">180dip</item>
        <item name="android:maxHeight">180dip</item>
    </style>

    <style name="AlertDialog.Button" parent="android:style/ButtonBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/alert_btn</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AlertDialog.Button.Cancel" parent="AlertDialog.Button">
        <item name="android:textStyle">normal</item>
    </style>

</resources>
